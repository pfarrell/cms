#!/usr/bin/env bash

kebab () {
  echo $(echo "$1" | sed -r -e 's/\s+/-/g' -e 's/([a-z0-9])([A-Z])/\1-\2/g' | tr '[:upper:]' '[:lower:]')
}

# create site dir if non-existent
mkdir -p site

# prompt for title
echo What should we call this post?
read title

kebab=$(kebab "$title")
date=$(date '+%Y-%m-%d')
post="site/$date-$kebab.yml"
content="site/$date-$kebab.md"

if [ ! -f "$post" ]; then
  # write new file
  python bin/new_post.py "$post" "$content" "$title"
else
  echo "file $post already exists"
fi

if [ ! -f "$content" ]; then
  touch "$content"
fi

